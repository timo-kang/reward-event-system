{
  "name": "node-express-api-ts",
  "description": "Simple api sample in Node",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --exec 'npm run build && npm run start'",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:auth": "tsc -p src/auth/tsconfig.json",
    "build:event": "tsc -p src/event/tsconfig.json",
    "build:gateway": "tsc -p src/gateway/tsconfig.json",
    "start:prod:auth": "node src/auth/dist/main.js",
    "start:prod:event": "node src/event/dist/main.js",
    "start:prod:gateway": "node src/gateway/dist/main.js"
  },
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.1",
    "@types/passport-jwt": "^4.0.1",
    "bcrypt": "^6.0.0",
    "class-validator": "^0.14.2",
    "express": "^4.21.2",
    "mongoose": "^8.14.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.12",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.5"
  }
}
