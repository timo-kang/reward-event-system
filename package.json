{
  "name": "node-express-api-ts",
  "description": "Simple api sample in Node",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --exec 'npm run build && npm run start'",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:auth": "tsc -p src/auth/tsconfig.json",
    "build:event": "tsc -p src/event/tsconfig.json",
    "build:gateway": "tsc -p src/gateway/tsconfig.json",
    "start:auth": "ts-node src/auth/main.ts",
    "start:event": "ts-node src/event/main.ts",
    "start:gateway": "ts-node src/gateway/main.ts",
    "dev:auth": "nodemon --watch 'src/auth/**' --ext 'ts,json' --exec 'npm run start:auth'",
    "dev:event": "nodemon --watch 'src/event/**' --ext 'ts,json' --exec 'npm run start:event'",
    "dev:gateway": "nodemon --watch 'src/gateway/**' --ext 'ts,json' --exec 'npm run start:gateway'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:auth": "jest src/auth --coverage",
    "test:event": "jest src/event --coverage",
    "test:gateway": "jest src/gateway --coverage",
    "test:unit": "jest --testPathPattern=src/.*\\.spec\\.ts$",
    "test:integration": "jest --testPathPattern=test/integration/.*\\.spec\\.ts$",
    "test:all": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'"
  },
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.1",
    "@types/passport-jwt": "^4.0.1",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^4.21.2",
    "mongoose": "^8.14.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.12",
    "@types/supertest": "^2.0.12",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
